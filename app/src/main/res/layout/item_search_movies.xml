<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        card_view:cardElevation="3dp"
        app:cardCornerRadius="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_search_movies"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:background="@color/cardview_shadow_start_color"
                android:scaleType="fitXY"  />

            <ImageView
                android:id="@+id/rating"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/img_search_movies"
                android:layout_alignRight="@+id/img_search_movies"
                android:layout_alignBottom="@+id/img_search_movies"
                android:background="@android:color/holo_blue_light" />

            <TextView
                android:id="@+id/tv_rating_search_movies"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_alignStart="@+id/rating"
                android:layout_alignLeft="@+id/rating"
                android:layout_alignTop="@+id/rating"
                android:layout_alignEnd="@+id/rating"
                android:layout_alignRight="@+id/rating"
                android:layout_alignBottom="@+id/rating"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:text="@string/_0_0"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_search_movies"
                style="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/margin_horizontal"
                android:layout_marginRight="@dimen/margin_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_search_movies"
                android:text="@string/title"
                android:textAlignment="center"
                android:maxLines="2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>